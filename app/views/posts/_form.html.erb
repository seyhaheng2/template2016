<%= form_for(@post, html: { multipart: true }, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control ckeditor" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :counter, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :counter, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subcategory_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
			<%= f.select :subcategory_id,Subcategory.all.map {|a| [a.name, a.id]}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
			<%= f.select :category_id,Category.all.map {|a| [a.name, a.id]}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
